@model IEnumerable<GroceryStore.Models.staff>

@{
    ViewBag.Title = "StaffDetails";
}

<h2>Staff Details</h2>

<p>
    @Html.ActionLink("Add New ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th> Edit </th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <span class="btn btn-warning">    @Html.ActionLink("Edit", "Edit", new { id = item.id }) </span>
            </td>
            <td>
                <span class="btn btn-warning"> @Html.ActionLink("Delete", "Delete", new { id = item.id }) </span>
            </td>
        </tr>
    }

</table>



<a href="@Url.Action("Dashboard","Home")" class="btn btn-primary"> Back to Dashboard  </a>
